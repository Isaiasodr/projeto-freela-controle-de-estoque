<a href="/inventory">voltar</a>
<form class="form-createProducts" action="/salesadd" method="POST">
    <input type="hidden" name="id" value="{{products.id}}">
    <h2>Cadastro de vendas</h2>

    <div class="form-products">
        <label for="product">ID Produto</label>
        <input type="number" name="product" style="width:50px;" id="id" value="{{products.id}}" readonly>
        <input type="hidden" name="inventoryproducts" value="{{products.amount}}">
    </div>
    <div class="form-products">
        <label for="product">Descrição do Produto</label>
        <input type="text" name="description" value="{{products.name}}, {{products.marca}},{{products.size}}" readonly>
    </div>

    <div class="container-form">
        <div class="form-products">
            <label for="amount">quantidade</label>
            <input type="number" name="amount" required>
        </div>

        <div class="form-products">
            <label for="price">Preço por unidade</label>
            <input type="number" name="price" required>
        </div>

        <div class="form-products">
            <input type="submit" value="Cadastrar venda">
        </div>
    </div>

</form>

