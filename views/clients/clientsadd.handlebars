<form class="form-createProducts" action="/clientsadd" method="POST">
    <h2>Cadastro de Clientes</h2>
    <div class="container-form">
        <div class="form-products">
            <label for="name">Nome</label>
            <input type="text" name="name" style="width: 588px;" required>
        </div>

        <div class="form-products">
            <label for="cpf">CPF</label>
            <input type="text" name="cpf" autocomplete="off" maxlength="14" id="cpf" onkeyup="mask_cpf()" required>
        </div>
        <div class="form-products">
            <label for="rg">RG</label>
            <input type="text" name="rg" required>
        </div>
        <div class="form-products">
            <label for="sex">Sexo</label>
            <select name="sex" style="width: 200px;" required>
                <option value="selecionar"></option>
                <option value="male">Masculino</option>
                <option value="female">Feminino</option>
            </select>
        </div>

        <div class="form-products">
            <label for="phone">Telefone</label>
            <input type="text" name="phone" required>
        </div>
        <div class="form-products">
            <label for="email">E-mail</label>
            <input type="email" name="email" required>
        </div>

        <div class="form-products">
            <input type="submit" value="Cadastrar">
        </div>
    </div>

</form>


