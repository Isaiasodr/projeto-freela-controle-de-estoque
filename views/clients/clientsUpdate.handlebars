<form class="form-createProducts" action="/clientsUpdateSave" method="POST">
<input type="hidden" name="id" value="{{clients.id}}">
    <h2>Cadastro de Clientes</h2>
    <div class="container-form">
        <div class="form-products">
            <label for="name">Nome</label>
            <input type="text" name="name" style="width: 588px;" value="{{clients.name}}" required>
        </div>

        <div class="form-products">
            <label for="cpf">CPF</label>
            <input type="text" name="cpf" value="{{clients.cpf}}" required>
        </div>
        <div class="form-products">
            <label for="rg">RG</label>
            <input type="text" name="rg" value="{{clients.rg}}"required>
        </div>
        <div class="form-products">
            <label for="sex">Sexo</label>
            <select name="sex" style="width: 200px;" required>
                <option value="selecionar" value="{{clients.sex}}"></option>
                <option value="male">Masculino</option>
                <option value="female">Feminino</option>
            </select>
        </div>

        <div class="form-products">
            <label for="phone">Telefone</label>
            <input type="text" name="phone" value="{{clients.phone}}" required>
        </div>
        <div class="form-products">
            <label for="email">E-mail</label>
            <input type="email" name="email" value="{{clients.email}}"required>
        </div>

        <div class="form-products">
            <input type="submit" value="Atualizar">
        </div>
    </div>

</form>