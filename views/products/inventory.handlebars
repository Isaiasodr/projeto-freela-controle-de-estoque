<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css">
    <title>Document</title>
</head>

<body>
    <h1 class="h1">Estoque</h1>

    <table id="example" class="display">
        <a href="/productsadd"><button type="button" class="btn">Cadastrar Produto</button></a>
        <thead>
            <tr class="cabeçalho">
                <th>ID</th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Tamanho</th>
                <th>modelo</th>
                <th>Estoque</th>
                <th>Custo</th>
                <th>Ações</th>


            </tr>
        </thead>
        <tbody class="body-table">
            {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.marca}}</td>
                <td>{{this.size}}</td>
                <td>{{this.model}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.cost}}</td>

                <td>
                    <form action="/delete:id" method="POST" style="display: inline;"  onsubmit="confirmarDelecao(event, this)">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit" style="border: none; background:none;">
                        <i class='bx bxs-trash-alt'></i>
                    </button>
                           
                    </form>
                 
                    <a href="productsupdate/{{this.id}}"><i class='bx bx-edit'></i></a>

                </td>
                {{/each}}
        </tbody>

    </table>
</body>
<script>
    $(document).ready(function () {
        $('#example').DataTable();

    });
</script>

</html>